{
    "manifest_version": 3,
    "name": "GitHub Repository Manager",
    "version": "1.0",
    "description": "Manage and categorize your GitHub repositories",
    "background": {
        "service_worker": "background.bundle.js"
    },
    "permissions": [
        "storage",
        "identity",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
        "https://github.com/*",
        "https://api.github.com/*",
        "http://localhost:5000/*",
        "https://repository-manager-extension-api.onrender.com/*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.jpg",
            "128": "images/icon128.jpg"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.jpg",
        "128": "images/icon128.jpg"
    },
    "oauth2": {
        "client_id": "__GITHUB_CLIENT_ID__",
        "scopes": [
            "repo",
            "user"
        ]
    }
}